<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/messagebar_row"
android:layout_width="match_parent"
android:layout_height="70dp"
app:layout_constraintTop_toTopOf="parent">

    <ImageButton
        android:id="@+id/messages_bar_add_btn"
        android:layout_width="35dp"
        android:layout_height="32dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_input_add" />

<ImageView
    android:id="@+id/messages_bar_title_icon"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_marginEnd="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@+id/messages_bar_add_btn"
    app:srcCompat="@drawable/ic_baseline_email_24" />

<TextView
    android:id="@+id/messages_bar_title"
    android:layout_width="65dp"
    android:layout_height="0dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="-5dp"
    android:text="@string/title_Messages"
    android:textSize="20sp"
    app:layout_constraintBottom_toBottomOf="@+id/messages_bar_title_icon"
    app:layout_constraintEnd_toStartOf="@+id/messages_bar_title_icon"
    app:layout_constraintTop_toTopOf="@+id/messages_bar_title_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>